    	      <Parameter Name="NoiseClockDivider" />
    	      <Parameter Name="NoiseDividerFactor" /> 
    </RefMode>

    <ModeLogicOperator Name="OR"> 
    	<Mode Name="State" UserName="Activated" UserNameCH="启用">
        <ModeLogicOperator Name="XOR">
          <Mode Name="State" UserName="Activated" UserNameCH="启用">
            <SignalLogicalOp Name="AND">
              <Signal Name="VS_TRNG" />
            </SignalLogicalOp>
            <Semaphore>State_ENABLED$IpInstance</Semaphore>
          </Mode>
        </ModeLogicOperator>
      </Mode>
    </ModeLogicOperator>

    <RefSignal Name="VS_TRNG" Virtual="true"/>                     
